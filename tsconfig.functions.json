{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./netlify/functions",
    "rootDir": "./netlify/functions",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "@netlify/functions"]
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
